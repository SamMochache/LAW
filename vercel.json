{
  "version": 2,
  "env": {
    "DJANGO_SETTINGS_MODULE": "core.settings",
    "DEBUG": "False"
  },
  "builds": [
    {
      "src": "core/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "core/wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ]
}
